@using C3P1.Client.Components.Layout
@using C3P1.Client.Components.Shared

@inherits LayoutComponentBase


@if ( layoutType == "fixed-header" )
{
    <DivLayout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <SideMenu />
            </LayoutSiderContent>
        </LayoutSider>
        <DivLayout>
            <LayoutHeader Fixed>
                <TopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                     ThemeGradientChanged="@OnThemeGradientChanged"
                     ThemeRoundedChanged="@OnThemeRoundedChanged"
                     ThemeColorChanged="@OnThemeColorChanged"
                     @bind-LayoutType="@layoutType" />
            </LayoutHeader>
            <LayoutContent Padding="Padding.Is3.OnX.Is3.FromTop" Class="main-layout">
                @Body
            </LayoutContent>
            <LayoutFooter>
                <div id="blazor-error-ui">
                    An unhandled error has occurred.
                    <a href="" class="reload">Reload</a>
                    <a class="dismiss">🗙</a>
                </div>
            </LayoutFooter>
        </DivLayout>
    </DivLayout>
}
else if ( layoutType == "fixed-header-footer-only" )
{
    <DivLayout>
        <LayoutHeader Fixed>
            <TopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                 ThemeGradientChanged="@OnThemeGradientChanged"
                 ThemeRoundedChanged="@OnThemeRoundedChanged"
                 ThemeColorChanged="@OnThemeColorChanged"
                 @bind-LayoutType="@layoutType" />
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is3.OnX.Is3.FromTop" Class="main-layout">
            @Body
        </LayoutContent>
        <LayoutFooter Fixed>
            <div id="blazor-error-ui">
                An unhandled error has occurred.
                <a href="" class="reload">Reload</a>
                <a class="dismiss">🗙</a>
            </div>
            <FooterMenu />
        </LayoutFooter>
    </DivLayout>
}
else if ( layoutType == "sider-with-header-on-top" )
{
    <DivLayout>
        <LayoutHeader Fixed>
            <TopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                 ThemeGradientChanged="@OnThemeGradientChanged"
                 ThemeRoundedChanged="@OnThemeRoundedChanged"
                 ThemeColorChanged="@OnThemeColorChanged"
                 @bind-LayoutType="@layoutType" />
        </LayoutHeader>
        <DivLayout Sider>
            <LayoutSider>
                <LayoutSiderContent>
                    <SideMenu />
                </LayoutSiderContent>
            </LayoutSider>
            <DivLayout>
                <LayoutContent Padding="Padding.Is3.OnX.Is3.FromTop" Class="main-layout">
                    @Body
                </LayoutContent>
                <LayoutFooter>
                    <div id="blazor-error-ui">
                        An unhandled error has occurred.
                        <a href="" class="reload">Reload</a>
                        <a class="dismiss">🗙</a>
                    </div>
                </LayoutFooter>
            </DivLayout>
        </DivLayout>
    </DivLayout>
}